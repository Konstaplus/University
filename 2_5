#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
    int n;
    cout << "Введите n\n";
    cin >> n;
    if (n <= 2)
    {
        cout << "ERROR";
    }
    else
    {
        for (int i = 1; i <= n; i++)
        {
        for (int j = 1; j <= n; j++)
        {
        if (i + j <= n)
        {
        cout << ' ';
        }
        else
        {
        cout << "*";
        }

        }
        cout << "\n";
        }
    }
    return 0;
}