#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "ru");
    int a, b;
    cout << "Введите 2 любых числа" << endl;
    cin >> a >> b;
    if (a = 0) {
        cout << "Результат равен 0" << endl;
    }
    else {
        if (b = 0) {
            cout << "Числитель не может быть равен 0" << endl;
        }
        else {
            cout << "Результат равен " << a / b << endl;
        }
    }

    return 0;
}